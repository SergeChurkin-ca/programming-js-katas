/* 
Sam's house has an apple tree and an orange tree that yield an abundance of fruit.
Using the information given below, determine the number of apples and oranges that land on Sam's house. 
Print out with line break

    s: integer, starting point of Sam's house location.
    t: integer, ending location of Sam's house location.
    a: integer, location of the Apple tree.
    b: integer, location of the Orange tree.
    apples: integer array, distances at which each apple falls from the tree.
    oranges: integer array, distances at which each orange falls from the tree.
Sample Input 0

7 11
5 15
3 2
-2 2 1
5 -6

Sample Output 0

1
1

*/

/* 
1 -  house coordinates [start, end]
2 - apple tree coordinates [start, end]
3 - orange tree coordinates [start. end]
4 - apples flight distances
5 - oranges flight distances
*/

const house = [7, 11]
const [appTree, orangeTree] = [5, 15]
const appleDist = [-2, 2, 1]
const orangeDist = [5, -6]

function countApplesAndOranges(s, t, a, b, apples, oranges) {
    [s, t] = house
    a = appTree
    b = orangeTree
    apples = appleDist.map((x) => x + appTree).filter((y) => y >= s)
    oranges = orangeDist.map((x) => x + orangeTree).filter((y) => y <= t)

    return (apples.length + '\n' + oranges.length)
}

console.log(countApplesAndOranges())
